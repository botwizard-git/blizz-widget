# WWZ Widgets - Nginx Configuration
# Copy this file to /etc/nginx/sites-available/blizz-widgets.conf
# Then create symlink: ln -s /etc/nginx/sites-available/blizz-widgets.conf /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    server_name blizz.botwizard.ch;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name blizz.botwizard.ch;

    # SSL Configuration (adjust paths to your certificates)
    ssl_certificate /etc/letsencrypt/live/blizz.botwizard.ch/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/blizz.botwizard.ch/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    # Root directory for widgets
    root /var/www/blizz-widgets/widgets;
    index index.html;

    # CORS headers for widget embedding on external sites
    add_header Access-Control-Allow-Origin "*" always;
    add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
    add_header Access-Control-Allow-Headers "Content-Type, Accept" always;

    # Handle OPTIONS preflight requests
    if ($request_method = 'OPTIONS') {
        add_header Access-Control-Allow-Origin "*";
        add_header Access-Control-Allow-Methods "GET, OPTIONS";
        add_header Access-Control-Allow-Headers "Content-Type, Accept";
        add_header Content-Length 0;
        add_header Content-Type text/plain;
        return 204;
    }

    # Caching for static assets (JS, CSS)
    location ~* \.(js|css)$ {
        expires 1h;
        add_header Cache-Control "public, must-revalidate";
        add_header Access-Control-Allow-Origin "*" always;
    }

    # Widget: wwz-blizz
    location /wwz-blizz/ {
        alias /var/www/blizz-widgets/widgets/wwz-blizz/;
        try_files $uri $uri/ =404;
    }

    # Widget: wwz-ivy
    location /wwz-ivy/ {
        alias /var/www/blizz-widgets/widgets/wwz-ivy/;
        try_files $uri $uri/ =404;
    }

    # Health check endpoint
    location /health {
        return 200 'OK';
        add_header Content-Type text/plain;
    }

    # Deny access to hidden files (except .well-known for SSL renewal)
    location ~ /\.(?!well-known) {
        deny all;
    }

    # Deny access to .git and other sensitive directories
    location ~ /\.(git|github|gitignore) {
        deny all;
    }

    # Logging
    access_log /var/log/nginx/blizz-widgets.access.log;
    error_log /var/log/nginx/blizz-widgets.error.log;
}
